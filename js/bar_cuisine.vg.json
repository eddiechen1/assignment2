{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",    
    "width": 2200,
    "height": 3000,
    "title": { "text": "Michelin Stars per Cuisine (excluding unique cuisines)", "fontSize": 30},
    "data": {
